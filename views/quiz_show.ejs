<!-- Take a quiz page -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Take a Quizio</title>


  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/quiz_show.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- BootStrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">


  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />
</head>

<body>
  <%- include('partials/_header') %>
    <main>
      <h3>Take a Quiz</h3>
      <h4 class="title">
        <a class="quizlabel"></a><%= quizItems[0].title %>
      </h4>
      <h5 class="title"><a class="quizlabel">Quiz url:&nbsp</a> api/quiz_show/<%= quizItems[0].url %>
      </h5>
      <h5 class="title"><a class="quizlabel">Created by:&nbsp</a> <%= quizItems[0].name %>
      </h5>
      <form id="answers" action="/api/quiz_show/<%= quizItems[0].url %>" method="POST">
      <table class="table">
        <tbody>
          <% let counter=1 %>
            <% for (let questionItem of quizItems) { %>
              <tr class="row">
                <div class = "question">
                  <%= counter%>. <%= questionItem.question %>
                </div>
                <div class="quiz-answers">
                  <input
                  class="form-control"
                  type="text"
                  name="quiz-answer"
                  placeholder="Type your answer here!"
                  />
                </div>
              </tr>
              <% counter++ %>
                <% } %>
        </tbody>
        <% if (loggedInUser) { %>
        <button type="submit" class="btn btn-outline-primary quiz-body"> Submit Answers</button>
        <% } else { %>
          <p class="error"> Please <a href="/api/login">Login</a> to submit your answers and see your score</p>
        <% } %>
      </table>
    </form>
    </main>
</body>

</html>
